<p id="notice"><%= notice %></p>
<hr>
<h1>Characters</h1>
<h6>Search Form: </h6>
<br>
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>
    <%= c.predicate_select only: [:cont, :lteq, :gteq]%>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <%end %>
  <%end %>
  <%= f.submit %>
<% end %>
<hr>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>House</th>
      <th>Character book</th>
      <th>Character location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.house %></td>

        <td><%= character.character_location_id %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate @character %>
<br>

<%= link_to 'New Character', new_character_path %>
