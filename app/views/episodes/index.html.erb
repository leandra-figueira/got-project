<p id="notice"><%= notice %></p>

Search Form: <br>
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>
    <%= c.predicate_select only: [:cont, :lteq, :gteq]%>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <%end %>
  <%end %>
  <%= f.submit %>
<% end %>

<h1>Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Episode number</th>
      <th>Name</th>
      <th>Date</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episode.each do |episode| %>
      <tr>
        <td><%= episode.season_id %></td>
        <td><%= episode.episode_number %></td>
        <td><%= episode.name %></td>
        <td><%= episode.date %></td>
        <td><%= raw episode.summary %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate @episode %>
<br>

